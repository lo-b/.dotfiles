; Colors used by modules
[colors]
background = #3c3836
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

; Shades for usage with left & right separator-modules
shade0  = #fbf1c7
shade1  = #458588
shade2  = #83a598
shade3  = #98971a
shade4  = #b8bb26
shade5  = #d79921
shade6  = #b16286
shade7  = #cc241d
shade8  = #fb4934

;==========================================================
; Left and right modules that act as deparators to get tag-like effect
[glyph]
gleft = 
gright = 

[module/left1]
type = custom/text
content-background = ${colors.shade2}
content-foreground = ${colors.shade1}
content = ${glyph.gleft}
fontent-font = 0

[module/left2]
type = custom/text
content-background = ${background}
content-foreground = ${colors.shade2}
content = ${glyph.gleft}
content-font = 0

[module/leftlast]
type = custom/text
content-background = ${background}
content-foreground = ${colors.shade3}
content = ${glyph.gleft}
content-font = 0

[module/right1]
type = custom/text
content-background = ${background}
content-foreground = ${colors.shade3}
content = ${glyph.gright}
content-font = 0

[module/right2]
type = custom/text
content-background = ${colors.shade3}
content-foreground = ${colors.shade5}
content = ${glyph.gright}
content-font = 0

[module/right3]
type = custom/text
content-background = ${colors.shade5}
content-foreground = ${colors.shade6}
content = ${glyph.gright}
content-font = 0

[module/right4]
type = custom/text
content-background = ${colors.shade6}
content-foreground = ${colors.shade7}
content = ${glyph.gright}
content-font = 0

[module/right5]
type = custom/text
content-background = ${colors.shade7}
content-foreground = ${colors.shade8}
content = ${glyph.gright}
content-font = 0

[module/right6]
type = custom/text
content-background = ${background}
content-foreground = ${colors.shade8}
content = 
content-font = 0


[module/space]
type = custom/text
content-background = ${background}
