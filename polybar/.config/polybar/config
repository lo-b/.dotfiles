; Setup bar itself
[bar/example]
width = 100%
height = 23
radius = 6.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
border-size = 6
border-color = #00000000
padding-left = 0
; Padding for systray
padding-right = 10
module-margin-left = 0
module-margin-right = 0
font-0 = JetBrainsMono Nerd Font:pixelsize=15;3
font-1 = Twemoji:style=Regular:scale=5;3
modules-left  = date left1 pulseaudio left2 battery left3 backlight leftlast
modules-center = bspwm space spotify-prev spotify-play-pause spotify-next spotify
modules-right = right1 filesystem  right2 xkeyboard right3 memory right4 cpu right5 temperature right6
tray-position = right
tray-padding = 2
wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true
; Let polybar calculate dpi from dpi-x & -y
dpi-x = 0
dpi-y = 0
tray-transparent = true
tray-detached = true
tray-offset-x = -4
tray-offset-y = 0
tray-offset = 0
tray-scale = 1.0
tray-maxsize = 20
bottom = 1

;==========================================================
; Setup modules
[module/xkeyboard]
type = internal/xkeyboard
format-background = ${colors.shade5}
format-foreground = ${colors.shade0}

; ======================= WARNING =========================
; Invisible character after keyboard icon below. The icon
; only 'grows' (shows full size) when it has a space and
; another character -- that is not a space -- after it.
format-prefix = ï„œ â€
format-prefix-foreground = ${colors.shade0}
label-layout = %number%
label-layout-padding = 1
label-indicator-padding = 1
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
format-mounted-background = ${colors.shade3}
format-mounted-foreground = ${colors.shade0}
mount-0 = /home
label-mounted = ï˜ª %mountpoint%: %free% free | %percentage_used%% used
label-unmounted = %mountpoint% not mounted

[module/bspwm]
type = internal/bspwm
format-background = ${background}
format-foreground = ${colors.shade0}
label-focused = %index%
label-focused-underline= ${colors.shade0}
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 2
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-empty =
label-empty-padding = 0
label-visible = %icon%
ws-icon-0 = I;1
ws-icon-1 = II;2
ws-icon-2 = III;3
ws-icon-3 = IV;4
ws-icon-4 = V;5
ws-icon-5 = VI;6
ws-icon-6 = VII;7
ws-icon-7 = VIII;8
ws-icon-8 = IX;9
ws-icon-9 = X;10

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ï§„ "
format-background = ${colors.shade7}
format-foreground = ${colors.shade0}
