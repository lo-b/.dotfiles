format-warn = <ramp> <label-warn>
label = %temperature-c%
label-warn = %temperature-c%!
ramp-0 = ï²²
ramp-1 = ï²±
ramp-2 = ï²°

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "  "
format = <label>
format-foreground = ${colors.shade0}
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
; Setting the minlength prevents the buttons from moving all over the place
; when going forward/backward through songs.
label-minlen = 30

[module/spotify-prev]
type = custom/script
exec = echo "<previous-song-symbol>"
format = ï¦­
format-foreground = ${colors.shade0}
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "  ï­¥  "
hook-1 = echo "  ï…„  "
format-foreground = ${colors.shade0}
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo "next-song-symbol"
format = ï¦¬
format-foreground = ${colors.shade0}
click-left = playerctl next spotify

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC
poll-interval = 5

label-full = " %percentage%%"
format-full = <ramp-capacity> <label-full>
format-full-padding = 1
format-full-background = ${colors.shade9}

label-charging = %percentage%%
format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-charging-background = ${colors.shade9}

label-discharging = " %percentage%%"
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1
format-discharging-background = ${colors.shade9}

ramp-capacity-0 = ï‰„
ramp-capacity-1 = ï‰ƒ
ramp-capacity-2 = ï‰‚
ramp-capacity-3 = ï‰
ramp-capacity-4 = ï‰€

; Only applies if <animation-charging> is used
animation-charging-0 = ï–…
